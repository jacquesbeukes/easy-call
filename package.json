{
  "name": "easy-call",
  "version": "1.0.0",
  "description": "Very simple call centre workflow app.",
  "repository": {
    "type": "git",
    "url": "https://github.com/thesedateone/easy-call.git"
  },
  "author": "Jacques Beukes",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "angular": "^1.3.15",
    "angular-mocks": "^1.3.15",
    "angular-route": "^1.3.15",
    "autoprefixer": "^4.0.0",
    "bootstrap": "^3.3.4",
    "cssmin": "^0.4.2",
    "font-awesome": "^4.3.0",
    "fs-extra": "^0.13.0",
    "jasmine-core": "^2.3.0",
    "jquery": "^2.1.4",
    "karma": "^0.12.31",
    "karma-coverage": "^0.3.1",
    "karma-growl-reporter": "~0.1",
    "karma-chrome-launcher": "^0.1.8",
    "karma-firefox-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "lodash": "^2.4.2",
    "nodemon": "^1.3.7",
    "opener": "^1.4.0",
    "parallelshell": "^1.0.3",
    "restangular": "^1.5.1",
    "rimraf": "^2.2.8"
  },
  "scripts": {
    "clean": "rimraf staticfiles/* & rimraf static/vendor/* & rimraf static/app/* & rimraf **/*.pyc",
    "prebuild": "npm run build:setup -s",
    "build:collect": "node scripts/collect.js",
    "build:setup": "node scripts/setup.js",
    "build": "npm run build:fast -s & npm run build:collect -s",
    "build:fast": "npm run build:styles -s & npm run static -s",
    "build:styles": "sass ./assets/styles/main.sass | autoprefixer -b 'last 2 versions' | cssmin > static/app/css/main.min.css",
    "test:jsunit": "node_modules/karma/bin/karma start karma.conf.js -s",
    "watch": "parallelshell 'npm run watch:build -s' 'npm run test:jsunit -s'",
    "watch:build": "nodemon -q -w assets/ --ext '.' --exec 'npm run build'",
    "static": "venv/bin/python manage.py collectstatic --noinput",
    "open:stage": "heroku open --remote staging",
    "open:prod": "heroku open --remote production",
    "open:dev": "opener http://localhost:5000",
    "deploy:stage": "git push staging develop:master",
    "deploy:prod": "git push production master",
    "dev": "npm run open:dev -s & parallelshell 'npm run serve -s' 'npm run watch -s'",
    "stage": "npm run deploy:stage -s & npm run open:stage -s",
    "serve": "venv/bin/python manage.py runserver 5000",
    "db:migrate:make": "venv/bin/python manage.py makemigrations",
    "db:migrate:dev": "venv/bin/python manage.py migrate",
    "db:migrate:stage": "heroku run --remote staging python manage.py migrate",
    "db:migrate:prod": "heroku run --remote production python manage.py migrate",
    "db:reset:dev": "rm -rf db.sqlite3",
    "db:reset:stage": "heroku pg:reset --remote staging DATABASE_URL --confirm intense-island-9839",
    "db:dumpdata:dev": "venv/bin/python manage.py dumpdata lists --indent=4 --natural-foreign > ./scripts/dump.json",
    "db:loaddata:dev": "venv/bin/python manage.py loaddata ./scripts/dump.json",
    "db:loadgroups:dev": "venv/bin/python manage.py loaddata ./scripts/groups.json"
  }
}
